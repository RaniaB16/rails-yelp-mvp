<h1>Editing Restaurant</h1>

<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
   <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
   <%= f.label :category %>
  <%= f.text_field :category %>
   <%= f.label :reviews %>
  <%= f.text_field :reviews %>
  <%= f.submit %>
<% end %>

<%= link_to 'Show', @restaurant %> |
